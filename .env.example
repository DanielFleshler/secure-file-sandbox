# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=pdf,txt,jpg,jpeg,png,gif,doc,docx
UPLOAD_DIR=./storage/uploads
PROCESSED_DIR=./storage/processed
TEMP_DIR=./storage/temp

# Sandbox Configuration
CONTAINER_IMAGE=secure-file-sandbox:latest
PROCESSING_TIMEOUT=60000
MAX_MEMORY=256m
MAX_CPU=0.5
NETWORK_ISOLATION=true

# Rate Limiting
RATE_WINDOW_MS=900000
RATE_MAX_REQUESTS=100
UPLOAD_RATE_WINDOW_MS=3600000
MAX_UPLOADS=10

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Security
ENABLE_VIRUS_SCAN=false
VIRUS_SCAN_API_KEY=
ENABLE_METADATA_STRIPPING=true
ENABLE_MAGIC_NUMBER_CHECK=true

# Storage Cleanup
CLEANUP_ENABLED=true
MAX_FILE_AGE_MS=86400000
CLEANUP_INTERVAL_MS=3600000
